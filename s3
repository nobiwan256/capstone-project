AWSTemplateFormatVersion: '2010-09-09'
Description: 'WordPress Media and Backup S3 Bucket'

Parameters:
  EnvironmentName:
    Type: String
    Default: WordPress
    Description: 'Environment name prefix for resource naming'

Resources:
  WordPressStorageBucket:
    Type: 'AWS::S3::Bucket'
    Properties:
      BucketName: !Sub ${EnvironmentName}-media-backup-${AWS::AccountId}
      PublicAccessBlockConfiguration:
        BlockPublicAcls: false
        BlockPublicPolicy: false
        IgnorePublicAcls: false
        RestrictPublicBuckets: false
      VersioningConfiguration:
        Status: Enabled
      BucketEncryption:
        ServerSideEncryptionConfiguration:
          - ServerSideEncryptionByDefault:
              SSEAlgorithm: AES256
      LifecycleConfiguration:
        Rules:
          - Id: TransitionToIA
            Status: Enabled
            Transitions:
              - StorageClass: STANDARD_IA
                TransitionInDays: 30

  WordPressBackupBucketPolicy:
    Type: 'AWS::S3::BucketPolicy'
    Properties:
      Bucket: !Ref WordPressStorageBucket
      PolicyDocument:
        Version: '2012-10-17'
        Statement:
          - Sid: AllowUserAccess
            Effect: Allow
            Principal: 
              AWS: !Sub 'arn:aws:iam::${AWS::AccountId}:root'
            Action:
              - 's3:GetObject'
              - 's3:PutObject'
              - 's3:ListBucket'
              - 's3:DeleteObject'
            Resource: 
              - !Sub 'arn:aws:s3:::${WordPressStorageBucket}/*'
              - !Sub 'arn:aws:s3:::${WordPressStorageBucket}'

Outputs:
  BackupBucketName:
    Description: Name of the S3 bucket for WordPress backups
    Value: !Ref WordPressStorageBucket
    Export:
      Name: !Sub ${EnvironmentName}-BackupBucketName

  BackupBucketDomainName:
    Description: Domain name of the S3 bucket
    Value: !GetAtt WordPressStorageBucket.DomainName
    Export:
      Name: !Sub ${EnvironmentName}-BackupBucketDomain

  S3BackupCommands:
    Description: Basic S3 backup commands
    Value: !Sub |
      # Create WordPress backup:
      tar -czf wordpress-backup.tar.gz /var/www/html/wp-content
      mysqldump --no-tablespaces -u wordpress -p wordpress > database.sql

      # Upload to S3:
      aws s3 cp wordpress-backup.tar.gz s3://${WordPressStorageBucket}/backup/wordpress-backup.tar.gz
      aws s3 cp database.sql s3://${WordPressStorageBucket}/backup/database.sql

      # Download from S3:
      aws s3 cp s3://${WordPressStorageBucket}/backup/wordpress-backup.tar.gz ./wordpress-backup.tar.gz
      aws s3 cp s3://${WordPressStorageBucket}/backup/database.sql ./database.sql
